<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DowiezPlLogin.EditText.Style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/input_padding</item>
        <item name="android:paddingStart">@dimen/input_padding</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="DowiezPlLogin.Button.Login" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:drawable">@drawable/login_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DowiezPlLogin.Button.Register" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:drawable">@drawable/register_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DowiezPlChat.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>
</resources>